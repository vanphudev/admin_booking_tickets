{
   "formatOnSave": true,
   "printWidth": 120,
   "semi": true,
   "tabWidth": 3,
   "singleQuote": true,
   "trailingComma": "all",
   "proseWrap": "never",
   "htmlWhitespaceSensitivity": "strict",
   "endOfLine": "auto",
   "overrides": [
      {
         "files": "*rc",
         "options": {
            "parser": "json"
         }
      }
   ],
   "plugins": ["prettier-plugin-tailwindcss"]
}
